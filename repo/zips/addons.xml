<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="plugin.audio.rbb" name="RadioBrowser²" provider-name="ArtyIF" version="0.8.2">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" version="2.27.1" />
    </requires>
    <extension library="addon.py" point="xbmc.python.pluginsource">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <website>https://radio-browser.info/</website>
        <source>https://github.com/ArtyIF/plugin.audio.rbb</source>
        <license>GPL-3.0-only</license>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.png</fanart>
        </assets>
        <summary lang="en_GB">A browser for RadioBrowser</summary>
        <description lang="en_GB">RadioBrowser² (Radio Browser Browser, or Radio Browser Squared) is a music add-on to browse the radio station list on radio-browser.info.[CR]radio-browser.info is a community driven effort (like Wikipedia) with the aim of collecting as many internet radio and TV stations as possible. It's free for all to use, has an open API, and the data is in public domain.</description>
        <disclaimer lang="en_GB">The developer of this add-on not affiliated with any of radio-browser.info maintainers.</disclaimer>
    </extension>
</addon><addon id="repository.artyif" name="ArtyIF's repository" version="1.0.0" provider-name="ArtyIF">
    <extension point="xbmc.addon.repository" name="ArtyIF's repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/ArtyIF/repository.artyif/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ArtyIF/repository.artyif/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ArtyIF/repository.artyif/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>ArtyIF's repository</summary>
        <description>Repository for ArtyIF's Kodi add-ons (like RadioBrowser²)</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon></addons>